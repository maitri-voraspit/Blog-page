	<%- include("partials/header") %>
<div class="ui main text container segment" id="element">
	<div class="ui huge header" id="navbar">Edit <%= blog.title %></div>
	<form class="ui form" action="/blogs/<%= blog._id%>?_method=PUT"  method="POST">
			<div class="field">
				<label>Title</label>
				<input type="text" name="blog[title]" placeholder="title" value="<%= blog.title %>">
			</div>
			<div class="field">
				<label>Image</label>
				<input type="text" name="blog[image]" placeholder="image" value="<%= blog.image %>">
			</div>
			<div class="field">
				<label>Blog Content</label>
				<textarea name="blog[body]" value> <%= blog.body %></textarea>
			</div>
		
		<input class="ui violet basic button " type="submit">
	</form>
</div>




